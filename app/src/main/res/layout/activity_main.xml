<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#88eae6">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Accelarometer"
        android:id="@+id/startServiceButton"
        android:layout_gravity="center_horizontal"
        android:onClick="onPressStartService"
        android:background="#84dc97"
        android:paddingRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_gravity="center_horizontal"
        android:background="#dc8484"
        android:layout_marginTop="10dp"
        android:onClick="onPressStopService" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Reading"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:onClick="show_accel"/>

    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start RECORD"
                android:id="@+id/startServiceButton1"
                android:layout_gravity="center_horizontal"
                android:onClick="onStartRecord"
                android:background="#84dc97"
                android:paddingRight="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:id="@+id/stopButton1"
                android:layout_gravity="center_horizontal"
                android:background="#dc8484"
                android:layout_marginTop="10dp"
                android:onClick="onStopRecord" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="15dp"
        android:text="Go to GPS Tracking"
        android:onClick="fun"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        >


    </Button>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan WIFI ACCESS POINT"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:id="@+id/wifi_scan"
            >

        </Button>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"

        android:id="@+id/wifi_list"/>

    </LinearLayout>
<!--    <fragment-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/f_c"/>-->


</LinearLayout>